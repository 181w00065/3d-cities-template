version "2012.1"

attr size = 10
attr GFA_Difference = 1
attr zmax = 0

normalizeGfaDiff(operand) =
	GFA_Difference / 500

@StartRule
Cube -->
	s(size, normalizeGfaDiff(GFA_Difference) + zmax, size)
	center(xz)
	i("builtin:cube")
	MeasurementStick
	
MeasurementStick -->
	split(y) {50: A | 50: B}*
	
A -->
	color(0.9,0.4,0.4)
	X.
	
B -->
	color(1,1,1)
	X.
